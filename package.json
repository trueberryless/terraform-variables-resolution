{
  "name": "terraform-variables-resolution",
  "displayName": "Terraform Variables Resolution",
  "description": "Resolve local terraform variables recursively and display them as inlay text besides your variables.",
  "version": "0.1.3",
  "publisher": "trueberryless",
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:terraform"
  ],
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Terraform",
    "Variables",
    "Resolution",
    "Inline Display"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terraform-resolver.refresh",
        "title": "Refresh Terraform Cache",
        "category": "Terraform"
      },
      {
        "command": "terraform-resolver.toggle",
        "title": "Toggle Terraform Inlay Hints",
        "category": "Terraform"
      }
    ],
    "languages": [
      {
        "id": "terraform",
        "extensions": [
          ".tf",
          ".tfvars"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Terraform Resolver Configuration",
      "properties": {
        "terraformResolver.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Terraform variable inlay hints"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "vscode:publish": "vsce publish --pat $VSCE_PAT",
    "release": "pnpm run vscode:prepublish && pnpm run vscode:publish",
    "version": "pnpm changeset version && pnpm i --no-frozen-lockfile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trueberryless/terraform-variables-resolution"
  }
}
